#!/bin/bash

# display a big emoji

if [[ "$1" == "" ]]; then
    echo "Usage: emoji <name>"
    exit
fi

tmps=$(mktemp -t XXXXXX.svg)
tmpj=$(mktemp -t XXXXXX.jpg)
function cleanup() {
    rm $tmps
    rm $tmpj
}
trap cleanup EXIT

url=$(emojiurl "$1")
if [[ $? == 0 ]]; then
    wget -q -O "$tmps" "$url"
    convert -density 300 -background white "$tmps" -background none -colorspace Gray -auto-level "$tmpj"
    jp2a --invert --width=40 "$tmpj"
fi
